<%- include('partials/header', { title: 'Home' , page: 'home' }) %>

    <main>
        <!-- Promotional Banner -->
        <div class="promo-banner">
            <div class="container">
                <div class="promo-content">
                    <i class="fas fa-gift"></i>
                    <span><strong>Special Offer:</strong> Get 20% OFF on your first order! Use code:
                        <strong>HAPPY20</strong></span>
                </div>
                <button class="promo-close"><i class="fas fa-times"></i></button>
            </div>
        </div>

        <!-- Hero Slider -->
        <section class="hero-slider" id="home">
            <div class="slide active"
                style="background-image: linear-gradient(135deg, rgba(0,123,255,0.05), rgba(255,140,0,0.05)), url('https://images.unsplash.com/photo-1513542789411-b6a5d4f31634?auto=format&fit=crop&w=1920&q=80');">
                <div class="container">
                    <div class="slide-content">
                        <div class="hero-badge">
                            <i class="fas fa-star"></i>
                            <span>Trending Now</span>
                        </div>
                        <span class="subtitle">New Collection 2024</span>
                        <h1>Unleash the <br><span class="gradient-text">Playful Spirit</span></h1>
                        <p>Discover our latest range of educational and fun toys for all ages. Premium quality, endless
                            joy!</p>
                        <div class="hero-actions">
                            <a href="#products" class="cta-btn primary">
                                <span>Shop Now</span>
                                <i class="fas fa-arrow-right"></i>
                            </a>
                            <a href="/about" class="cta-btn secondary">
                                <i class="fas fa-play-circle"></i>
                                <span>Learn More</span>
                            </a>
                        </div>
                        <div class="hero-stats">
                            <div class="stat-item">
                                <h3>500+</h3>
                                <p>Products</p>
                            </div>
                            <div class="stat-item">
                                <h3>10K+</h3>
                                <p>Happy Customers</p>
                            </div>
                            <div class="stat-item">
                                <h3>4.9â˜…</h3>
                                <p>Rating</p>
                            </div>
                        </div>
                    </div>
                    <!-- Floating Elements -->
                    <div class="hero-floating-elements">
                        <div class="floating-card floating-1">
                            <i class="fas fa-truck"></i>
                            <span>Free Shipping</span>
                        </div>
                        <div class="floating-card floating-2">
                            <i class="fas fa-shield-alt"></i>
                            <span>Secure Payment</span>
                        </div>
                        <div class="floating-card floating-3">
                            <i class="fas fa-tag"></i>
                            <span>Best Prices</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Features Info -->
        <section class="features-info">
            <div class="container">
                <div class="features-grid">
                    <div class="feature-item">
                        <i class="fas fa-shipping-fast"></i>
                        <div>
                            <h4>Free Delivery</h4>
                            <p>On all orders over $50</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-shield-alt"></i>
                        <div>
                            <h4>Secure Payment</h4>
                            <p>100% secure payment</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-undo"></i>
                        <div>
                            <h4>30 Days Return</h4>
                            <p>If goods have problems</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-headset"></i>
                        <div>
                            <h4>24/7 Support</h4>
                            <p>Dedicated support</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Categories -->
        <section class="categories-section">
            <div class="container">
                <h2 class="section-title">Shop by Category</h2>
                <div class="category-grid">
                    <a href="/toys" class="category-card large"
                        style="background-image: url('https://images.unsplash.com/photo-1566576912321-d58ddd7a6088?auto=format&fit=crop&w=600&q=80');">
                        <div class="overlay">
                            <h3>Toys</h3>
                            <span>Shop Now</span>
                        </div>
                    </a>
                    <a href="/gifts" class="category-card"
                        style="background-image: url('https://images.unsplash.com/photo-1513885535751-8b9238bd345a?auto=format&fit=crop&w=600&q=80');">
                        <div class="overlay">
                            <h3>Gifts</h3>
                            <span>Shop Now</span>
                        </div>
                    </a>
                    <a href="/stationery" class="category-card"
                        style="background-image: url('https://images.unsplash.com/photo-1456735190827-d1262f71b8a6?auto=format&fit=crop&w=600&q=80');">
                        <div class="overlay">
                            <h3>Stationery</h3>
                            <span>Shop Now</span>
                        </div>
                    </a>
                    <a href="/plastic" class="category-card"
                        style="background-image: url('https://images.unsplash.com/photo-1596461404969-9ae70f2830c1?auto=format&fit=crop&w=600&q=80');">
                        <div class="overlay">
                            <h3>Plastic Goods</h3>
                            <span>Shop Now</span>
                        </div>
                    </a>
                </div>
            </div>
        </section>

        <!-- Featured Products -->
        <section class="products-section" id="products">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Trending Products</h2>
                    <div class="filter-tabs">
                        <button class="active">All</button>
                        <button>New Arrivals</button>
                        <button>Best Sellers</button>
                        <button>On Sale</button>
                    </div>
                </div>
                <div class="product-grid" id="product-grid">
                    <!-- Products loaded via JS -->
                </div>
            </div>
        </section>

        <!-- Deal of the Day -->
        <section class="deal-section" id="deals">
            <div class="container">
                <div class="deal-wrapper">
                    <div class="deal-content">
                        <span class="label">Deal of the Day</span>
                        <h2>Mega Sale! Up to 50% Off</h2>
                        <p>Get the best deals on our premium remote control cars. Limited time offer.</p>
                        <div class="countdown">
                            <div class="time-box">
                                <span id="days">02</span>
                                <small>Days</small>
                            </div>
                            <div class="time-box">
                                <span id="hours">10</span>
                                <small>Hours</small>
                            </div>
                            <div class="time-box">
                                <span id="minutes">45</span>
                                <small>Mins</small>
                            </div>
                            <div class="time-box">
                                <span id="seconds">30</span>
                                <small>Secs</small>
                            </div>
                        </div>
                        <a href="#" class="cta-btn white">Shop Now</a>
                    </div>
                    <div class="deal-image">
                        <img src="https://images.unsplash.com/photo-1594787318286-3d835c1d207f?auto=format&fit=crop&w=600&q=80"
                            alt="Deal Product" loading="lazy">
                    </div>
                </div>
            </div>
        </section>

        <!-- Why Choose Us -->
        <section class="why-choose-section">
            <div class="container">
                <div class="why-choose-header">
                    <h2 class="section-title">Why Choose HappyShop?</h2>
                    <p class="section-subtitle">We're more than just a store - we're your trusted partner for quality
                        and joy</p>
                </div>
                <div class="why-choose-grid">
                    <div class="why-card">
                        <div class="why-icon">
                            <i class="fas fa-certificate"></i>
                        </div>
                        <h3>Premium Quality</h3>
                        <p>All products are carefully selected and quality-tested to ensure the best experience for you
                            and your family.</p>
                    </div>
                    <div class="why-card">
                        <div class="why-icon">
                            <i class="fas fa-hand-holding-usd"></i>
                        </div>
                        <h3>Best Value</h3>
                        <p>Competitive prices without compromising on quality. Get the best deals and exclusive offers
                            regularly.</p>
                    </div>
                    <div class="why-card">
                        <div class="why-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <h3>Fast Delivery</h3>
                        <p>Quick and reliable shipping to get your orders to you as fast as possible. Track your package
                            every step of the way.</p>
                    </div>
                    <div class="why-card">
                        <div class="why-icon">
                            <i class="fas fa-smile"></i>
                        </div>
                        <h3>Customer Satisfaction</h3>
                        <p>Over 10,000 happy customers and a 4.9-star rating. Your satisfaction is our top priority.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Brands Showcase -->
        <section class="brands-section">
            <div class="container">
                <h2 class="section-title">Trusted by Leading Brands</h2>
                <div class="brands-slider">
                    <div class="brand-item">
                        <div class="brand-logo"><i class="fas fa-cube"></i> LEGO</div>
                    </div>
                    <div class="brand-item">
                        <div class="brand-logo"><i class="fas fa-palette"></i> Crayola</div>
                    </div>
                    <div class="brand-item">
                        <div class="brand-logo"><i class="fas fa-graduation-cap"></i> LeapFrog</div>
                    </div>
                    <div class="brand-item">
                        <div class="brand-logo"><i class="fas fa-puzzle-piece"></i> Melissa</div>
                    </div>
                    <div class="brand-item">
                        <div class="brand-logo"><i class="fas fa-star"></i> Hasbro</div>
                    </div>
                    <div class="brand-item">
                        <div class="brand-logo"><i class="fas fa-heart"></i> Fisher</div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Testimonials -->
        <section class="testimonials-section">
            <div class="container">
                <h2 class="section-title">What Our Customers Say</h2>
                <div class="testimonials-grid">
                    <div class="testimonial-card">
                        <div class="stars"><i class="fas fa-star"></i><i class="fas fa-star"></i><i
                                class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i></div>
                        <p>"Absolutely love the quality of the toys! My kids are obsessed with the building blocks. Fast
                            shipping too!"</p>
                        <div class="user-info">
                            <img src="https://randomuser.me/api/portraits/women/44.jpg" alt="User" loading="lazy">
                            <div>
                                <h5>Sarah Johnson</h5>
                                <small>Happy Mom</small>
                            </div>
                        </div>
                    </div>
                    <div class="testimonial-card">
                        <div class="stars"><i class="fas fa-star"></i><i class="fas fa-star"></i><i
                                class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i></div>
                        <p>"Great selection of stationery. The fountain pen I bought writes so smoothly. Will definitely
                            order again."</p>
                        <div class="user-info">
                            <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="User" loading="lazy">
                            <div>
                                <h5>Michael Chen</h5>
                                <small>Student</small>
                            </div>
                        </div>
                    </div>
                    <div class="testimonial-card">
                        <div class="stars"><i class="fas fa-star"></i><i class="fas fa-star"></i><i
                                class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i>
                        </div>
                        <p>"The gift wrapping service is a lifesaver. The birthday box arrived beautifully packaged.
                            Highly recommend!"</p>
                        <div class="user-info">
                            <img src="https://randomuser.me/api/portraits/women/68.jpg" alt="User" loading="lazy">
                            <div>
                                <h5>Emily Davis</h5>
                                <small>Gift Shopper</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Newsletter -->
        <section class="newsletter-section">
            <div class="container">
                <div class="newsletter-content">
                    <div class="icon-box">
                        <i class="far fa-paper-plane"></i>
                    </div>
                    <div class="text-content">
                        <h2>Subscribe to our Newsletter</h2>
                        <p>Get the latest updates on new products and upcoming sales.</p>
                    </div>
                    <form class="newsletter-form">
                        <input type="email" placeholder="Enter your email address">
                        <button type="submit">Subscribe</button>
                    </form>
                </div>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>